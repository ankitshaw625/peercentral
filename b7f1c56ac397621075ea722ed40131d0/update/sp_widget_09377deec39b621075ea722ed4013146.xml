        <script><![CDATA[(function() {
  /* populate the 'data' object */
  /* e.g., data.table = $sp.getValue('table'); */
	
	var recordLimit = options.limit || 10;
	
	data.recognitions = [];
	
	var grPeerRecognitions = new GlideRecord('x_1794402_peerce_0_peer_recognition');
	grPeerRecognitions.orderByDesc('sys_created_on');
	grPeerRecognitions.setLimit(recordLimit);
	grPeerRecognitions.query();
	
	while (grPeerRecognitions.next()) {
		data.recognitions.push({
			sysId: grPeerRecognitions.sys_id.toString(),
			recipient: grPeerRecognitions.recipient.name.toString(),
			sender: grPeerRecognitions.sender.name.toString(),
			category: grPeerRecognitions.category.name.toString(),
			message: grPeerRecognitions.message.toString(),
			createdOn: grPeerRecognitions.sys_created_on.getDisplayValue()
		});	
	}
	
})();]]></script>
